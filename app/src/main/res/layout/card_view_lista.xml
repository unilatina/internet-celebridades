<?xml version="1.0" encoding="utf-8"?>

<!-- TODO (6) Añadirle ID a CardView -->

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:cardCornerRadius="10dp"
    cardview:cardElevation="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="10dp"
    android:id="@+id/parent_layout"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- TODO (7) Añadirle ID a ImageView -->
        <ImageView
            android:id="@+id/image_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/imagencampo"
            android:scaleType="centerCrop"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:background="#000"
            android:paddingVertical="10dp"
            android:alpha=".6"
            >

            <!-- TODO (8) Añadirle ID a TextView Titulo -->
            <TextView
                android:id="@+id/titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Colombia"
                android:textColor="#fff"
                android:textSize="40sp"
                android:paddingLeft="30dp"
                />

            <!-- TODO (9) Añadirle ID a TextView subtítulo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nuestro Campo"
                android:textColor="#fff"
                android:textSize="15sp"
                android:paddingLeft="30dp"
                />


            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numStars="3"
                android:paddingLeft="30dp"
                android:stepSize="1.0"
                android:rating="2.0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- TODO (10) Añadirle ID a TextView Button 1 -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VIEW"
                    android:paddingLeft="30dp"
                    android:textSize="20sp"
                    android:textColor="#fff"/>

                <!-- TODO (11) Añadirle ID a TextView Button 2 -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COMPARTIR"
                    android:paddingLeft="30dp"
                    android:textSize="20sp"
                    android:textColor="#fff"/>

            </LinearLayout>


        </LinearLayout>


    </FrameLayout>


</android.support.v7.widget.CardView>